<resources>

    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float" />
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <style name="Barkeep" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Barkeep.Home" />

    <style name="Barkeep.Book" />

    <style name="Barkeep.Book.Edit" />

    <style name="Barkeep.Book.Details" />

    <style name="Barkeep.Bar" />

    <style name="Barkeep.Bar.Details" />

    <style name="Barkeep.Bar.Edit" />

    <style name="Barkeep.Recipe" />

    <style name="Barkeep.Recipe.Details">
        <item name="android:windowSharedElementEnterTransition">@transition/recipe_detail_shared_enter</item>
        <item name="android:windowEnterTransition">@transition/recipe_detail_enter</item>
    </style>

    <style name="Barkeep.Recipe.Search" />

    <style name="Barkeep.Recipe.Edit" />


    <style name="Widget.Barkeep" parent="android:Widget" />

    <style name="Widget.Barkeep.AppBarOverlay">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.Barkeep.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Barkeep.NavHeader">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>


    <style name="TextAppearance.NavHeader.Header" parent="TextAppearance.AppCompat.Body1" />

</resources>
