<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ingredient"
            type="com.bnorm.barkeep.server.data.store.Ingredient" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        tools:context=".activity.bar.BarDetailActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="ingredient"
            app:imageUrl='@{"http://2.bp.blogspot.com/-PIQcxG5KkiU/To8duH-jYDI/AAAAAAAACEk/OtbVHe8EjmI/s200/jameson.jpg"}' />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            android:background="#c0000000"
            android:gravity="center"
            android:text="@{ingredient.name}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.CardView>
</layout>